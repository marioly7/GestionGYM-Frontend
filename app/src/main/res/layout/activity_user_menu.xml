<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="#DC09375C"
        android:orientation="vertical"
        tools:context=".activity.UserMenuActivity">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30dp"
            android:typeface="serif"
            android:ems="10"
            android:id="@+id/t_text"
            android:text="MENÃš PRINICIPAL"
            android:longClickable="true"
            android:textStyle="italic"
            android:textColor="#FFC107"
            android:layout_centerHorizontal="true"
            android:scrollbars = "vertical"/>



    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
    >
        <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Actividades"
                android:id="@+id/plansButton"
                android:padding="10dp"
                android:textColor="#192777"
                android:textStyle="bold"
                android:background="#FFC107"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
        ></Button>

        <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mis Horarios"
                android:id="@+id/misHorariosButton"
                android:padding="10dp"
                android:textColor="#192777"
                android:textStyle="bold"
                android:background="#FFC107"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
        ></Button>

    </LinearLayout>


</LinearLayout>