<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.ActivitiesActivity">


    <TextView
            android:text="ACTIVIDADES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#E39523"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:id="@+id/textViewUserList"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="16dp"
            tools:ignore="MissingConstraints"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchPlan"
                android:queryHint="Busqueda"
        ></SearchView>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rvPlans"
            android:layout_height="681dp" tools:layout_editor_absoluteY="52dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"/>

</LinearLayout>