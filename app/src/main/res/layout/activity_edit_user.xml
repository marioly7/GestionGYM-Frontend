<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.EditUser">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                >

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F4C433"
                    ></View>

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="EDICIÓN DE USUARIO"
                              android:textColor="#FFFFFF"
                              android:textAlignment="center"
                              android:textStyle="bold"
                              android:layout_marginTop="50dp"
                              android:textSize="22dp"
                    ></TextView>
                    <ImageView android:layout_width="150dp"
                               android:layout_height="150dp"
                               android:src="@drawable/ic_baseline_person_24"
                               android:layout_gravity="center"
                               android:layout_marginTop="40dp"
                    ></ImageView>

                </FrameLayout>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginTop="30dp"
                              android:layout_marginLeft="30dp"
                              android:layout_marginRight="30dp"
                >
                    <ImageView android:layout_width="30dp"
                               android:layout_height="30dp"
                               android:layout_marginTop="15dp"
                               android:layout_marginRight="5dp"
                               android:src="@drawable/username"
                    ></ImageView>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nombres"
                                android:inputType="text"
                                android:id="@+id/etName"
                        ></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginLeft="30dp"
                              android:layout_marginRight="30dp"
                >
                    <ImageView android:layout_width="30dp"
                               android:layout_height="30dp"
                               android:layout_marginTop="15dp"
                               android:layout_marginRight="5dp"
                               android:src="@drawable/username"
                    ></ImageView>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Apellidos"
                                android:inputType="text"
                                android:id="@+id/etLastName"
                        ></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginLeft="30dp"
                              android:layout_marginRight="30dp"
                >
                    <ImageView android:layout_width="30dp"
                               android:layout_height="30dp"
                               android:layout_marginTop="15dp"
                               android:layout_marginRight="5dp"
                               android:src="@drawable/emal"
                    ></ImageView>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Correo electronico"
                                android:inputType="textEmailAddress"
                                android:id="@+id/etEmail"
                        ></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginLeft="30dp"
                              android:layout_marginRight="30dp"
                >
                    <ImageView android:layout_width="30dp"
                               android:layout_height="30dp"
                               android:layout_marginTop="15dp"
                               android:layout_marginRight="5dp"
                               android:src="@drawable/password"
                    ></ImageView>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Contraseña"
                                android:inputType="textPassword"
                                android:id="@+id/etPassword"
                        ></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginLeft="30dp"
                              android:layout_marginRight="30dp"
                >
                    <ImageView android:layout_width="30dp"
                               android:layout_height="30dp"
                               android:layout_marginTop="15dp"
                               android:layout_marginRight="5dp"
                               android:src="@drawable/password"
                    ></ImageView>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Confirmar contraseña"
                                android:inputType="textPassword"
                                android:id="@+id/etConfirmPassword"
                        ></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Tipo de Usuario"
                        android:textStyle="bold"
                        android:textSize="20dp"
                ></TextView>

                <RadioGroup
                        android:id="@+id/radioType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <RadioButton
                            android:id="@+id/radioAdmi"
                            android:layout_width="match_parent"
                            android:textSize="20dp"
                            android:buttonTint="#4B4DC6"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:text="Administrador"/>

                    <RadioButton
                            android:id="@+id/radioEnc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:textSize="20dp"
                            android:buttonTint="#4B4DC6"
                            android:paddingTop="15dp"
                            android:text="Encargado"/>

                    <RadioButton
                            android:id="@+id/radioCli"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:textSize="20dp"
                            android:buttonTint="#4B4DC6"
                            android:paddingTop="15dp"
                            android:text="Cliente"/>

                </RadioGroup>

                <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Plan"
                        android:textStyle="bold"
                        android:textSize="20dp"
                ></TextView>

                <RadioGroup
                        android:id="@+id/radioPlan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                >

                    <RadioButton
                            android:id="@+id/radioPremium"
                            android:layout_width="match_parent"
                            android:textSize="20dp"
                            android:buttonTint="#4B4DC6"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:text="Premium"/>

                    <RadioButton
                            android:id="@+id/radioGold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:textSize="20dp"
                            android:buttonTint="#4B4DC6"
                            android:paddingTop="15dp"
                            android:text="Gold"/>

                    <RadioButton
                            android:id="@+id/radioNone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:textSize="20dp"
                            android:buttonTint="#4B4DC6"
                            android:paddingTop="15dp"
                            android:text="Ninguno"/>

                </RadioGroup>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:layout_marginTop="-70dp"
                        android:orientation="horizontal"
                >

                    <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/saveChangesButton"
                            android:text="GUARDAR"
                            android:backgroundTint="#B903A9F4"
                            android:background="@drawable/rounded_button"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                    ></Button>

                    <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/disableButton"
                            android:text="DESHABILITAR"
                            android:backgroundTint="#FF9800"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_button"
                    ></Button>

                </LinearLayout>
            </LinearLayout>



        </RelativeLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>